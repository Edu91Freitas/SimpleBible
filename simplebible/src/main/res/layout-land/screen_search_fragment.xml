<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  tools:context=".ui.ScreenSearch">

  <LinearLayout
    android:id="@+id/scrSearchContainerTop"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/gapSmall"
    android:animateLayoutChanges="true"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <SearchView
      android:id="@+id/scrSearchInput"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:iconifiedByDefault="false"
      android:imeOptions="actionSearch"
      android:inputType="textAutoCorrect|textAutoComplete"
      android:queryHint="@string/scrSearchInputHint"
      android:searchIcon="@drawable/ic_search" />

    <HorizontalScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.google.android.material.chip.Chip
          android:id="@+id/scrSearchActionBookmark"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/scrSearchActionBookmark" />

        <com.google.android.material.chip.Chip
          android:id="@+id/scrSearchActionShare"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/scrSearchActionShare" />

        <com.google.android.material.chip.Chip
          android:id="@+id/scrSearchActionClear"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/scrSearchActionClear" />

        <com.google.android.material.chip.Chip
          android:id="@+id/scrSearchActionReset"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/scrSearchActionReset" />
      </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
  </LinearLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/scrSearchContainer"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/gapSmall"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/scrSearchContainerTop">

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/scrSearchContainerGV20"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/scrSearchContainerGV80"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.4" />

    <ImageView
      android:id="@+id/scrSearchContainerImage"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:contentDescription="@string/scrSearchContainerHelpImage"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintEnd_toEndOf="@id/scrSearchContainerGV80"
      app:layout_constraintStart_toStartOf="@id/scrSearchContainerGV20"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_hero_search" />

    <ScrollView
      android:id="@+id/scrSearchContainerScrollView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/scrSearchContainerGV80"
      app:layout_constraintTop_toTopOf="parent">

      <TextView
        android:id="@+id/scrSearchHelpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="@dimen/gapSmall"
        android:gravity="center_vertical"
        android:padding="@dimen/gapHuge"
        android:text="@string/scrSearchHelpText" />
    </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/scrSearchList"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/gapSmall"
    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/scrSearchContainerTop"
    app:spanCount="@integer/scrSearchListColumnCount"
    tools:listitem="@layout/item_search_result" />

</androidx.constraintlayout.widget.ConstraintLayout>
