<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.BookmarkListScreen">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/bookmark_list_scr_land_gv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.1" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/bookmark_list_scr_land_gv4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.4" />

  <ImageView
    android:id="@+id/bookmark_list_scr_help_image"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:contentDescription="@string/bookmark_list_scr_help_image_description"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintEnd_toStartOf="@id/bookmark_list_scr_land_gv4"
    app:layout_constraintStart_toEndOf="@id/bookmark_list_scr_land_gv1"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_hero_bookmark" />

  <ScrollView
    android:id="@+id/bookmark_list_scr_container_help_text"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/gap_huge"
    android:padding="@dimen/gap_huge"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/bookmark_list_scr_help_image"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/bookmark_list_scr_help_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/bookmark_list_scr_help_text" />
  </ScrollView>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/bookmark_list_scr_list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:spanCount="@integer/bookmark_list_scr_list_columns"
    tools:listitem="@layout/item_bookmark" />

</androidx.constraintlayout.widget.ConstraintLayout>
