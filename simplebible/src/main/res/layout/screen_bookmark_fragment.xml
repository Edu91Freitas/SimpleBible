<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.ScreenBookmarkDetail">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/scrBookmarkDetailBottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true"
        app:fabAlignmentMode="end"
        app:fabAnimationMode="slide"
        app:hideOnScroll="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/scr_bookmark_detail_bottom_nav_menu"
        tools:ignore="BottomAppBar">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:fillViewport="true">

            <TextView
                android:id="@+id/scrBookmarkDetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </HorizontalScrollView>
    </com.google.android.material.bottomappbar.BottomAppBar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scrBookmarkDetailVerseList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/gapHuge"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/scrBookmarkDetailBottomAppBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:spanCount="@integer/scrBookmarkListColumnCount"
        tools:listitem="@layout/item_bookmark_verse" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/scrBookmarkDetailNote"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="start"
        android:hint="@string/scrBookmarkDetailNote"
        android:padding="@dimen/gapHuge"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/scrBookmarkDetailBottomAppBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
