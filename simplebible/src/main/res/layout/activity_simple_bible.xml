<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.andrewchelladurai.app.simplebible.SimpleBible">

  <fragment
    android:id="@+id/activity_nav_host_fragment"
    android:name="androidx.navigation.fragment.NavHostFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:defaultNavHost="true"
    app:navGraph="@navigation/navigation_activity_simple_bible" />

  <com.google.android.material.bottomappbar.BottomAppBar
    android:id="@+id/activity_bottom_app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:fabAlignmentMode="end" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/activity_bottom_app_bar_fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_anchor="@id/activity_bottom_app_bar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
