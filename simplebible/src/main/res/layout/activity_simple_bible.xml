<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin"
    android:animateLayoutChanges="true"
    tools:context=".ui.SimpleBibleMainScreen">

    <android.support.constraint.Guideline
        android:id="@+id/act_main_gh10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/act_main_gh70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <ScrollView
        android:id="@+id/act_main_container_verse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/gap_normal"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/act_main_gh70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/act_main_gh10"
        app:layout_constraintVertical_bias="0.536">

        <TextView
            android:id="@+id/act_main_verse"
            style="@style/SbTheme.Header"
            android:gravity="center"
            android:text="@string/act_main_splash_verse"
            android:textAlignment="center" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/act_main_container_pbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gap_normal"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/act_main_gh70">

        <ProgressBar
            android:id="@+id/act_main_pbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:padding="@dimen/gap_normal" />

        <TextView
            android:id="@+id/act_main_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/gap_normal"
            android:text="@string/act_main_splash_msg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_main_container_fabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/act_main_gh70">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/act_main_fab_books"
            style="@style/SbTheme.FAB"
            android:layout_margin="@dimen/gap_normal"
            android:layout_weight="1"
            android:contentDescription="@string/act_main_fab_books_desc"
            android:src="@drawable/ic_list" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/act_main_fab_search"
            style="@style/SbTheme.FAB"
            android:layout_margin="@dimen/gap_normal"
            android:layout_weight="1"
            android:contentDescription="@string/act_main_fab_search_desc"
            android:src="@drawable/ic_search" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/act_main_fab_bookmarks"
            style="@style/SbTheme.FAB"
            android:layout_margin="@dimen/gap_normal"
            android:layout_weight="1"
            android:contentDescription="@string/act_main_fab_bookmarks_desc"
            android:src="@drawable/ic_bookmark" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/act_main_fab_settings"
            style="@style/SbTheme.FAB"
            android:layout_margin="@dimen/gap_normal"
            android:layout_weight="1"
            android:contentDescription="@string/act_main_fab_settings_desc"
            android:src="@drawable/ic_settings" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
