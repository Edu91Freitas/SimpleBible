<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.ScreenChapter">

  <!-- This linear layout holds the bottom section -->
  <LinearLayout
    android:id="@+id/scrChapterContainerBottom"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:baselineAligned="false"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <!-- holds the title + the show chapter fab -->
    <LinearLayout
      android:id="@+id/scrChapterContainerTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
          android:id="@+id/scrChapterTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif-condensed" />

      </HorizontalScrollView>

      <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scrChapterActionShowChapters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gapSmall"
        android:src="@drawable/ic_list"
        app:fabSize="mini" />
    </LinearLayout>

    <!-- holds the chapter list + hide chapter fab -->
    <LinearLayout
      android:id="@+id/scrChapterContainerChapterSector"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scrChapterChapterList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_chapter_number" />

      <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scrChapterActionHideChapters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gapSmall"
        android:src="@drawable/ic_clear"
        app:fabSize="mini" />
    </LinearLayout>

    <!-- holds the actions for selected verses -->
    <HorizontalScrollView
      android:id="@+id/scrChapterContainerSelectionActions"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_weight="1"
      android:fillViewport="true">

      <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
          android:id="@+id/scrChapterActionSelectionBookmark"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <com.google.android.material.chip.Chip
          android:id="@+id/scrChapterActionSelectionShare"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <com.google.android.material.chip.Chip
          android:id="@+id/scrChapterActionSelectionClear"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

  </LinearLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/scrChapterVerseList"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
    app:layout_constraintBottom_toTopOf="@id/scrChapterContainerBottom"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:spanCount="@integer/scrChapterVerseListColumnCount"
    tools:listitem="@layout/item_chapter_verse" />

</androidx.constraintlayout.widget.ConstraintLayout>
