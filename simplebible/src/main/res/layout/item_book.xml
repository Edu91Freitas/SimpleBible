<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/gap_small"
    android:paddingBottom="@dimen/gap_small"
    android:layout_marginTop="@dimen/gap_small"
    android:layout_marginBottom="@dimen/gap_small"
    android:orientation="vertical">

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:fontFamily="@font/bitter_bold"
        android:id="@+id/item_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textAllCaps="true"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:id="@+id/item_book_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
