<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="@dimen/gap_normal"
  android:layout_marginEnd="@dimen/gap_normal"
  app:cardCornerRadius="@dimen/gap_big"
  app:cardElevation="@dimen/gap_small"
  app:cardUseCompatPadding="true">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/gap_normal"
    android:layout_marginEnd="@dimen/gap_normal"
    android:paddingStart="@dimen/gap_small"
    android:paddingTop="@dimen/gap_normal"
    android:paddingEnd="@dimen/gap_small"
    android:paddingBottom="@dimen/gap_normal">

    <TextView
      android:id="@+id/item_bookmark_content"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/item_bookmark_content_template"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0" />

    <TextView
      android:id="@+id/item_bookmark_note"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/gap_small"
      android:layout_marginBottom="@dimen/gap_small"
      android:text="@string/item_bookmark_note_template"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@id/item_bookmark_content"
      app:layout_constraintStart_toStartOf="@id/item_bookmark_content"
      app:layout_constraintTop_toBottomOf="@id/item_bookmark_content"
      app:layout_constraintVertical_bias="0" />

    <com.google.android.material.chip.Chip
      android:id="@+id/item_bookmark_action_view"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/gap_normal"
      android:text="@string/item_bookmark_action_view"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/item_bookmark_action_delete"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/item_bookmark_note"
      app:layout_constraintVertical_bias="0" />

    <com.google.android.material.chip.Chip
      android:id="@+id/item_bookmark_action_delete"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/gap_normal"
      android:layout_marginEnd="@dimen/gap_normal"
      android:text="@string/item_bookmark_action_delete"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="@id/item_bookmark_action_view"
      app:layout_constraintEnd_toStartOf="@id/item_bookmark_action_share"
      app:layout_constraintStart_toEndOf="@id/item_bookmark_action_view"
      app:layout_constraintTop_toTopOf="@id/item_bookmark_action_view" />

    <com.google.android.material.chip.Chip
      android:id="@+id/item_bookmark_action_share"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/item_bookmark_action_share"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="@id/item_bookmark_action_delete"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/item_bookmark_action_delete"
      app:layout_constraintTop_toTopOf="@id/item_bookmark_action_delete" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
