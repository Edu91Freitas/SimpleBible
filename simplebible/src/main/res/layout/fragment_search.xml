<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.andrewchelladurai.simplebible.SearchFragment"
    style="@style/StyleForMainScreens"
    tools:context=".SearchFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_search_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_search_input"
            style="@style/StyleForTextInput"
            android:hint="@string/fragment_search_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fragment_search_label"
        style="@style/StyleForTextSubHeader"
        android:layout_below="@id/fragment_search_input_container"
        android:gravity="center" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/fragment_search_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_search_label"
        android:animateLayoutChanges="true">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_search_button_search"
            style="@style/StyleForButtons"
            android:layout_weight="1"
            android:text="@string/fragment_search_button_default" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_search_button_reset"
            style="@style/StyleForButtons"
            android:layout_weight="1"
            android:text="@string/fragment_search_button_reset"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_search_button_share"
            style="@style/StyleForButtons"
            android:layout_weight="1"
            android:text="@string/fragment_search_button_share"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_search_button_bookmark"
            style="@style/StyleForButtons"
            android:layout_weight="1"
            android:text="@string/fragment_search_button_bookmark"
            android:visibility="gone" />
    </android.support.v7.widget.LinearLayoutCompat>

    <ScrollView
        android:id="@+id/fragment_search_label_help_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_search_button_container"
        android:layout_marginTop="@dimen/screen_padding"
        android:padding="@dimen/text_margin">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragment_search_label_help"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/fragment_search_label_help"
            android:textColor="@color/textColor" />
    </ScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_search_label_help_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/screen_padding"
        android:visibility="gone"
        tools:listitem="@layout/content_search_result_entry" />

</RelativeLayout>
