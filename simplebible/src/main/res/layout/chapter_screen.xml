<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:paddingTop="@dimen/gap_normal"
                                                   android:paddingBottom="@dimen/gap_normal"
                                                   android:paddingStart="@dimen/activity_margin"
                                                   android:paddingEnd="@dimen/activity_margin"
                                                   android:animateLayoutChanges="true"
                                                   tools:context=".ui.ChapterScreen">

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/chapter_scr_list_chapters"
    android:visibility="gone"
    android:layout_width="0dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:listitem="@layout/item_chapter_number" />

  <HorizontalScrollView
    android:id="@+id/chapter_scr_title_container"
    android:layout_marginEnd="@dimen/gap_small"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:layout_marginTop="@dimen/gap_small"
    app:layout_constraintBottom_toTopOf="@id/chapter_scr_list_chapters"
    app:layout_constraintEnd_toStartOf="@id/chapter_scr_butt_chapters"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintStart_toStartOf="parent">

    <TextView
      android:id="@+id/chapter_scr_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
      android:fontFamily="sans-serif-black"
      android:textAllCaps="true"
      tools:text="Song of Solomon : Chapter 13" />
  </HorizontalScrollView>

  <ImageButton
    android:id="@+id/chapter_scr_butt_chapters"
    android:contentDescription="@string/chapter_scr_butt_chapters"
    android:layout_marginStart="@dimen/gap_small"
    android:layout_width="wrap_content"
    android:backgroundTint="@android:color/transparent"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_grid"
    app:layout_constraintBottom_toBottomOf="@id/chapter_scr_title_container"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintStart_toEndOf="@id/chapter_scr_title_container"
    app:layout_constraintTop_toTopOf="@id/chapter_scr_title_container" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/chapter_scr_list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/gap_small"
    android:layout_marginBottom="@dimen/gap_small"
    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
    app:layout_constraintBottom_toTopOf="@id/chapter_scr_title_container"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:spanCount="@integer/chapter_scr_list_column"
    tools:listitem="@layout/item_chapter_verse" />

</androidx.constraintlayout.widget.ConstraintLayout>
