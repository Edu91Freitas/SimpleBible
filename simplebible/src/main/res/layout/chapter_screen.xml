<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:paddingStart="@dimen/activity_margin"
                                                   android:paddingEnd="@dimen/activity_margin"
                                                   tools:context=".ui.ChapterScreen">

  <ScrollView
    android:id="@+id/chapter_scr_title_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/gap_small"
    android:layout_marginBottom="@dimen/gap_small"
    android:padding="@dimen/gap_small"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/chapter_scr_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Title" />
  </ScrollView>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/chapter_scr_list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/gap_small"
    android:layout_marginBottom="@dimen/gap_small"
    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
    app:layout_constraintBottom_toTopOf="@id/chapter_scr_butt_share"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/chapter_scr_title_container"
    app:spanCount="@integer/chapter_scr_list_column"
    tools:listitem="@layout/item_chapter_verse" />

  <!-- todo find a better way to show the actions -->
  <androidx.appcompat.widget.AppCompatImageButton
    android:id="@+id/chapter_scr_butt_share"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:contentDescription="@string/chapter_src_butt_share"
    android:padding="@dimen/gap_small"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/chapter_scr_butt_bmark"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/chapter_scr_list"
    app:srcCompat="@drawable/ic_share" />

  <androidx.appcompat.widget.AppCompatImageButton
    android:id="@+id/chapter_scr_butt_bmark"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:contentDescription="@string/chapter_scr_butt_bmark"
    android:padding="@dimen/gap_small"
    app:layout_constraintBottom_toBottomOf="@id/chapter_scr_butt_share"
    app:layout_constraintEnd_toStartOf="@id/chapter_scr_butt_clear"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintStart_toEndOf="@id/chapter_scr_butt_share"
    app:layout_constraintTop_toTopOf="@id/chapter_scr_butt_share"
    app:srcCompat="@drawable/ic_bookmark" />

  <androidx.appcompat.widget.AppCompatImageButton
    android:id="@+id/chapter_scr_butt_clear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:contentDescription="@string/chapter_scr_butt_clear"
    android:padding="@dimen/gap_small"
    app:layout_constraintBottom_toBottomOf="@id/chapter_scr_butt_bmark"
    app:layout_constraintEnd_toStartOf="@id/chapter_scr_butt_chapters"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintStart_toEndOf="@id/chapter_scr_butt_bmark"
    app:layout_constraintTop_toTopOf="@id/chapter_scr_butt_bmark"
    app:srcCompat="@drawable/ic_clear" />

  <androidx.appcompat.widget.AppCompatImageButton
    android:id="@+id/chapter_scr_butt_chapters"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:contentDescription="@string/chapter_scr_butt_chapters"
    android:padding="@dimen/gap_small"
    app:layout_constraintBottom_toBottomOf="@id/chapter_scr_butt_clear"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintStart_toEndOf="@id/chapter_scr_butt_clear"
    app:layout_constraintTop_toTopOf="@id/chapter_scr_butt_clear"
    app:srcCompat="@drawable/ic_list" />

</androidx.constraintlayout.widget.ConstraintLayout>
