<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:paddingStart="@dimen/activity_margin"
  android:paddingTop="@dimen/gap_normal"
  android:paddingEnd="@dimen/activity_margin"
  android:paddingBottom="@dimen/gap_normal"
  tools:context=".ui.ChapterScreen">

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/chapter_scr_title_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <HorizontalScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fillViewport="true">

      <TextView
        android:id="@+id/chapter_scr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gap_small"
        android:padding="@dimen/gap_small"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        tools:text="Song of Solomon : Chapter 13" />
    </HorizontalScrollView>
  </com.google.android.material.card.MaterialCardView>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/chapter_scr_list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/gap_small"
    android:layout_marginBottom="@dimen/gap_small"
    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
    app:layout_constraintBottom_toTopOf="@id/chapter_scr_list_chapters_container"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/chapter_scr_title_container"
    app:spanCount="@integer/chapter_scr_list_column"
    tools:listitem="@layout/item_chapter_verse" />

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/chapter_scr_list_chapters_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="@id/chapter_scr_action_container"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/chapter_scr_list">

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/chapter_scr_list_chapters"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:padding="@dimen/gap_small"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/item_chapter_number" />
  </com.google.android.material.card.MaterialCardView>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/chapter_scr_action_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/chapter_scr_list_chapters_container">

    <com.google.android.material.chip.Chip
      android:id="@+id/chapter_scr_butt_share"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/gap_small"
      android:layout_marginEnd="@dimen/gap_small"
      android:text="@string/chapter_src_butt_share"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/chapter_scr_butt_bmark"
      app:layout_constraintHorizontal_chainStyle="spread"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
      android:id="@+id/chapter_scr_butt_bmark"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/gap_small"
      android:layout_marginEnd="@dimen/gap_small"
      android:text="@string/chapter_scr_butt_bmark"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="@id/chapter_scr_butt_share"
      app:layout_constraintEnd_toStartOf="@id/chapter_scr_butt_clear"
      app:layout_constraintHorizontal_chainStyle="spread"
      app:layout_constraintStart_toEndOf="@id/chapter_scr_butt_share"
      app:layout_constraintTop_toTopOf="@id/chapter_scr_butt_share" />

    <com.google.android.material.chip.Chip
      android:id="@+id/chapter_scr_butt_clear"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/gap_small"
      android:layout_marginEnd="@dimen/gap_small"
      android:text="@string/chapter_scr_butt_clear"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="@id/chapter_scr_butt_bmark"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_chainStyle="spread"
      app:layout_constraintStart_toEndOf="@id/chapter_scr_butt_bmark"
      app:layout_constraintTop_toTopOf="@id/chapter_scr_butt_bmark" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
