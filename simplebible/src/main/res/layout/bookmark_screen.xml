<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginStart="@dimen/activity_margin"
  android:layout_marginTop="@dimen/gap_normal"
  android:layout_marginEnd="@dimen/activity_margin"
  tools:context=".ui.BookmarkScreen">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/bookmark_scr_action_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/bookmark_scr_note_container">

    <com.google.android.material.chip.Chip
      android:id="@+id/bookmark_scr_action_edit"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/gap_small"
      android:layout_marginEnd="@dimen/gap_small"
      android:text="@string/bookmark_scr_action_edit"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/bookmark_scr_action_save"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
      android:id="@+id/bookmark_scr_action_save"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/gap_small"
      android:layout_marginEnd="@dimen/gap_small"
      android:text="@string/bookmark_scr_action_save"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="@id/bookmark_scr_action_edit"
      app:layout_constraintEnd_toStartOf="@id/bookmark_scr_action_delete"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toEndOf="@id/bookmark_scr_action_edit"
      app:layout_constraintTop_toTopOf="@id/bookmark_scr_action_edit" />

    <com.google.android.material.chip.Chip
      android:id="@+id/bookmark_scr_action_delete"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/gap_small"
      android:layout_marginEnd="@dimen/gap_small"
      android:text="@string/bookmark_scr_action_delete"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="@id/bookmark_scr_action_save"
      app:layout_constraintEnd_toStartOf="@id/bookmark_scr_action_share"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toEndOf="@id/bookmark_scr_action_save"
      app:layout_constraintTop_toTopOf="@id/bookmark_scr_action_save" />

    <com.google.android.material.chip.Chip
      android:id="@+id/bookmark_scr_action_share"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/gap_small"
      android:layout_marginEnd="@dimen/gap_small"
      android:text="@string/bookmark_scr_action_share"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="@id/bookmark_scr_action_delete"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toEndOf="@id/bookmark_scr_action_delete"
      app:layout_constraintTop_toTopOf="@id/bookmark_scr_action_delete" />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/bookmark_scr_note_container"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/gap_small"
    app:layout_constraintBottom_toTopOf="@id/bookmark_scr_action_container"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/bookmark_scr_list"
    app:layout_constraintVertical_chainStyle="spread">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/bookmark_scr_note"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:backgroundTint="@android:color/transparent"
      android:gravity="top|start"
      android:hint="@string/bookmark_scr_note_hint"
      tools:text="Some text note" />
  </com.google.android.material.textfield.TextInputLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/bookmark_scr_list"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
    app:layout_constraintBottom_toTopOf="@id/bookmark_scr_note_container"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/bookmark_scr_title"
    app:layout_constraintVertical_chainStyle="spread"
    app:spanCount="@integer/bookmark_scr_list"
    tools:listitem="@layout/item_bookmark_verse" />

  <TextView
    android:id="@+id/bookmark_scr_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/gap_small"
    android:text="@string/chapter_scr_butt_bmark"
    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
    app:layout_constraintBottom_toTopOf="@id/bookmark_scr_list"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
