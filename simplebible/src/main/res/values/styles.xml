<resources>

    <style name="SbTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>

        <!-- this is for v23+
        <item name="android:windowLightStatusBar">true</item>
        -->

        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <!-- The Splash theme. Shown briefly when launching the application-->
    <style name="SbTheme.LoaderSplash">
        <item name="android:windowBackground">@drawable/act_scr_bground_splash</item>
        <item name="colorPrimaryDark">@color/launcher_background</item>
    </style>

    <!--Theme used in the DB loader screen-->
    <style name="SbTheme.Loader">
        <item name="android:windowBackground">@drawable/act_scr_bground_loader</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SbTheme.Main"
        parent="SbTheme">
        <item name="colorAccent">@color/launcher_background</item>
        <item name="colorPrimary">?colorAccent</item>
        <item name="android:navigationBarColor">?colorAccent</item>
        <item name="android:statusBarColor">?colorAccent</item>
    </style>

    <style name="SbTheme.AppBar"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SbTheme.Toolbar"
        parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?colorAccent</item>
    </style>


</resources>
