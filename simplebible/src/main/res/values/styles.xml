<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Style applied to entire application -->
    <style name="SbTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Enable Transitions and Animations-->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- Enable Dark Nav and Status Bar on versions that support it-->
        <!--<item name="android:windowLightStatusBar">true</item>-->
        <!--<item name="android:windowLightNavigationBar">true</item>-->

        <!-- Enable Transparent Status and Nav bar on versions where above properties do not work-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Base colors for the app -->
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorPrimary">@color/primaryColor</item>

        <!-- Text color used throughout the app -->
        <item name="android:textColor">@color/black</item>

        <!-- Background color used through out the app -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:windowBackground">@color/background_color</item>

    </style>

    <style name="SbTheme.Home">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="SbTheme.Home.Splash">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
