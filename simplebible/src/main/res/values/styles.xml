<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SbTheme"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <!--<item name="android:windowLightStatusBar">true</item>-->

        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SbTheme.Home">
        <item name="android:windowBackground">@drawable/act_main_bground</item>

        <item name="colorPrimary">@color/greenLight</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
        <item name="colorAccent">?colorPrimaryDark</item>
    </style>

    <style name="SbTheme.Home.Splash">
        <item name="android:windowBackground">@drawable/act_main_splash_bground</item>
    </style>

    <style name="SbTheme.BooksScreen"
        parent="SbTheme">
        <item name="android:colorBackground">@color/greenLight</item>
        <item name="android:windowBackground">@color/greenLight</item>

        <item name="colorAccent">@color/greenDark</item>
        <item name="colorPrimary">@color/greenLight</item>
    </style>

    <style name="SbTheme.ChapterScreen"
        parent="SbTheme">
        <item name="android:colorBackground">@color/blueLight</item>
        <item name="android:windowBackground">@color/blueLight</item>
        <item name="android:navigationBarColor">@color/blueDarker</item>

        <item name="colorAccent">@color/blueDarker</item>
        <item name="colorPrimary">@color/blueLight</item>
    </style>

    <style name="SbTheme.Red"
        parent="SbTheme">
        <item name="android:colorBackground">@color/redLight</item>
        <item name="android:windowBackground">@color/redLight</item>
        <!--<item name="android:navigationBarColor">@color/redLight</item>-->
        <!--<item name="android:statusBarColor">@color/redDarker</item>-->

        <item name="colorAccent">@color/redDarker</item>
        <item name="colorPrimary">@color/redLight</item>
    </style>

    <style name="SbTheme.Yellow"
        parent="SbTheme">
        <item name="android:colorBackground">@color/yellowLighter</item>
        <item name="android:windowBackground">@color/yellowLighter</item>
        <item name="android:navigationBarColor">@color/yellowDarker</item>
        <!--<item name="android:statusBarColor">@color/yellowDarker</item>-->

        <item name="colorAccent">@color/yellowDarker</item>
        <item name="colorPrimary">@color/yellowLighter</item>
    </style>

    <style name="SbTheme.FAB"
        parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?colorPrimary</item>
    </style>

    <style name="SbTheme.AutoCompleteTextView"
        parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="SbTheme.Header"
        parent="TextAppearance.MaterialComponents.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?colorPrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
    </style>

    <style name="SbTheme.SubHeader"
        parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/inconsolata</item>
    </style>

    <style name="SbTheme.Button.Filled"
        parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="SbTheme.Button.Outlined"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:strokeColor">?colorPrimary</item>
    </style>

    <style name="SbTheme.Button.Filled.Icon"
        parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="iconTint">?colorPrimary</item>
    </style>

    <style name="SbTheme.Button.Outlined.Icon"
        parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:strokeColor">?colorAccent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="iconTint">?colorAccent</item>
    </style>

    <style name="SbTheme.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/gap_small</item>
        <item name="android:layout_marginEnd">@dimen/gap_normal</item>
        <item name="android:layout_marginStart">@dimen/gap_normal</item>
        <item name="android:layout_marginTop">@dimen/gap_small</item>
        <item name="cardElevation">@dimen/gap_none</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>
