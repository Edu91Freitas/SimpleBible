<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SbTheme"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:windowBackground">@color/background_light</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SbTheme.Splash.Temp">
        <item name="android:windowBackground">@drawable/activity_splash_background</item>
        <item name="colorPrimaryDark">?colorAccent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SbTheme.Splash">
        <item name="android:windowBackground">@drawable/activity_splash_progress_background</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorAccent">@color/primary_dark</item>
    </style>

</resources>
