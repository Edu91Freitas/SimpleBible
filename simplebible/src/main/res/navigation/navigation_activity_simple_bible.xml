<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/navigation_activity_simple_bible"
  app:startDestination="@id/screenHome">

  <fragment
    android:id="@+id/screenHome"
    android:name="com.andrewchelladurai.app.simplebible.ui.HomeScreen"
    android:label="screen_home"
    tools:layout="@layout/home_screen">
    <action
      android:id="@+id/screenHome_to_screenChapter"
      app:destination="@id/screenChapter" />
    <action
      android:id="@+id/action_screenHome_to_screenBookmarkDetails"
      app:destination="@id/screenBookmarkDetails" />
  </fragment>

  <fragment
    android:id="@+id/screenBookList"
    android:name="com.andrewchelladurai.app.simplebible.ui.BookListScreen"
    android:label="screen_book_list"
    tools:layout="@layout/book_list_screen">
    <action
      android:id="@+id/screenBookList_to_screenBookDetails"
      app:destination="@id/screenBookDetails" />
    <action
      android:id="@+id/screenBookList_to_screenChapter"
      app:destination="@id/screenChapter" />
  </fragment>

  <fragment
    android:id="@+id/screenSearch"
    android:name="com.andrewchelladurai.app.simplebible.ui.SearchScreen"
    android:label="screen_search"
    tools:layout="@layout/search_screen">
    <action
      android:id="@+id/screenSearch_to_screenBookmarkDetails"
      app:destination="@id/screenBookmarkDetails" />
  </fragment>

  <fragment
    android:id="@+id/screenSettings"
    android:name="com.andrewchelladurai.app.simplebible.ui.SettingsScreen"
    android:label="screen_settings"
    tools:layout="@layout/settings_screen" />

  <fragment
    android:id="@+id/screenBookmarkList"
    android:name="com.andrewchelladurai.app.simplebible.ui.BookmarkListScreen"
    android:label="screen_bookmark_list"
    tools:layout="@layout/bookmark_list_screen">
    <action
      android:id="@+id/screenBookmarkList_to_screenBookmarkDetails"
      app:destination="@id/screenBookmarkDetails" />
  </fragment>

  <fragment
    android:id="@+id/screenChapter"
    android:name="com.andrewchelladurai.app.simplebible.ui.ChapterScreen"
    android:label="screen_chapter"
    tools:layout="@layout/chapter_screen">
    <action
      android:id="@+id/screenChapter_to_screenBookmarkDetails"
      app:destination="@id/screenBookmarkDetails" />
    <argument
      android:name="BOOK_NUMBER"
      app:argType="integer" />
    <argument
      android:name="CHAPTER_NUMBER"
      app:argType="integer" />
  </fragment>

  <fragment
    android:id="@+id/screenMessage"
    android:name="com.andrewchelladurai.app.simplebible.ui.MessageScreen"
    android:label="screen_message"
    tools:layout="@layout/message_screen">
    <argument
      android:name="MESSAGE"
      app:argType="string"
      app:nullable="true" />
    <argument
      android:name="EXIT"
      android:defaultValue="false"
      app:argType="boolean" />
    <argument
      android:name="INFORM_DEV"
      android:defaultValue="true"
      app:argType="boolean" />
    <argument
      android:name="WARNING"
      android:defaultValue="true"
      app:argType="boolean" />
  </fragment>

  <fragment
    android:id="@+id/screenBookDetails"
    android:name="com.andrewchelladurai.app.simplebible.ui.BookDetailsScreen"
    android:label="screen_book_details"
    tools:layout="@layout/book_details_screen">
    <argument
      android:name="BOOK_NUMBER"
      app:argType="integer" />
  </fragment>

  <fragment
    android:id="@+id/screenBookmarkDetails"
    android:name="com.andrewchelladurai.app.simplebible.ui.BookmarkDetailsScreen"
    android:label="screen_bookmark_details"
    tools:layout="@layout/bookmark_details_screen">
    <argument
      android:name="REFERENCES"
      app:argType="string" />
  </fragment>

  <action
    android:id="@+id/show_screenMessage"
    app:destination="@id/screenMessage"
    app:launchSingleTop="true"
    app:popUpTo="@id/navigation_activity_simple_bible"
    app:popUpToInclusive="true" />
  <action
    android:id="@+id/show_screenSettings"
    app:destination="@id/screenSettings"
    app:launchSingleTop="true"
    app:popUpTo="@id/navigation_activity_simple_bible"
    app:popUpToInclusive="true" />
  <action
    android:id="@+id/show_screenHome"
    app:destination="@id/screenHome"
    app:launchSingleTop="true"
    app:popUpTo="@id/navigation_activity_simple_bible"
    app:popUpToInclusive="true" />
  <action
    android:id="@+id/show_screenBookList"
    app:destination="@id/screenBookList"
    app:launchSingleTop="true"
    app:popUpTo="@id/navigation_activity_simple_bible"
    app:popUpToInclusive="true" />
  <action
    android:id="@+id/show_screenSearch"
    app:destination="@id/screenSearch"
    app:launchSingleTop="true"
    app:popUpTo="@id/navigation_activity_simple_bible"
    app:popUpToInclusive="true" />
  <action
    android:id="@+id/show_screenBookmarkList"
    app:destination="@id/screenBookmarkList"
    app:launchSingleTop="true"
    app:popUpTo="@id/navigation_activity_simple_bible"
    app:popUpToInclusive="true" />
</navigation>
