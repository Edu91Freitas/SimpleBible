<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrewchelladurai.simplebible" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LightTheme" >
        <activity
            android:name=".ActivityWelcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityVerseViewer"
            android:label="@string/title_activity_verse_viewer"
            android:parentActivityName=".ActivityWelcome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityWelcome" />
        </activity>
        <activity
            android:name=".ActivitySettings"
            android:label="@string/title_activity_activity__settings"
            android:parentActivityName=".ActivityWelcome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityWelcome" />
        </activity>

        <service
            android:name=".notification.ServiceReminderScheduler"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".notification.NotifierService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
