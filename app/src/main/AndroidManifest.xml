<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrewchelladurai.simplebible">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BrightTheme">
        <activity
            android:name=".SimpleBibleActivity"
            android:label="@string/title_activity_simple_bible"
            android:theme="@style/BrightTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChapterActivity"
            android:label="@string/title_activity_chapter"
            android:parentActivityName=".SimpleBibleActivity"
            android:theme="@style/BrightTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andrewchelladurai.simplebible.SimpleBibleActivity" />
        </activity>
    </application>

</manifest>