<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StyleForMainScreens"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.andrewchelladurai.simplebible.ChapterListActivity">

    <!--
    This layout is a two-pane layout for the Chapters
    master/detail flow.

    -->

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/chapter_list"
        android:name="com.andrewchelladurai.simplebible.ChapterListFragment"
        style="@style/StyleForMainScreens"
        android:layout_width="@dimen/item_width"
        android:layout_gravity="center"
        app:layoutManager="GridLayoutManager"
        app:spanCount="@integer/column_count_chapter_list"
        tools:context="com.andrewchelladurai.simplebible.ChapterListActivity"
        tools:listitem="@layout/content_chapter_entry" />

    <FrameLayout
        android:id="@+id/chapter_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>
