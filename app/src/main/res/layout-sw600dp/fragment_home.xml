<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/gapBig"
    tools:context="com.andrewchelladurai.simplebible.HomeFragment">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/gapBig">

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/fragment_home_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:completionThreshold="1"
            android:hint="@string/hint_book_name"
            android:inputType="text|textNoSuggestions"
            android:maxLines="1" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/fragment_home_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:completionThreshold="1"
            android:hint="@string/hint_chapter_number"
            android:inputType="numberSigned|textAutoComplete"
            android:maxLines="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_home_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/action_goto_location" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardUseCompatPadding="true">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragment_home_daily_verse"
            style="?title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/gapBig"
            android:text="Daily verse"
            android:textColor="@color/primary_text_light"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>
