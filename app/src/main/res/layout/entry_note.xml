<android.support.v7.widget.CardView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:animateLayoutChanges = "true"
    android:orientation = "vertical"
    app:cardBackgroundColor = "@color/cardBackground"
    app:cardPreventCornerOverlap = "true"
    app:cardUseCompatPadding = "true">

    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:paddingTop = "@dimen/gap">

        <android.support.v7.widget.AppCompatTextView
            android:id = "@+id/entry_note_verse"
            style = "@style/TextHeader"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:layout_alignParentTop = "true"
            android:paddingEnd = "@dimen/gap"
            android:paddingLeft = "@dimen/gap"
            android:paddingRight = "@dimen/gap"
            android:paddingStart = "@dimen/gap"
            android:text = "@string/fragment_note_empty_header"
            android:textStyle = "normal" />

        <android.support.v7.widget.AppCompatTextView
            android:id = "@+id/entry_note_text"
            style = "@style/TextSubHeader"
            android:layout_below = "@+id/entry_note_verse"
            android:maxLines = "5"
            android:paddingEnd = "@dimen/gap"
            android:paddingLeft = "@dimen/gap"
            android:paddingRight = "@dimen/gap"
            android:paddingStart = "@dimen/gap"
            android:paddingTop = "@dimen/gap_small"
            android:text = "@string/activity_bookmark_empty_note"
            android:textStyle = "bold" />

        <android.support.v7.widget.ButtonBarLayout
            android:id = "@+id/note_action_bar"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentEnd = "true"
            android:layout_alignParentRight = "true"
            android:layout_below = "@+id/entry_note_text"
            android:gravity = "center_vertical"
            android:orientation = "horizontal"
            android:paddingTop = "@dimen/gap_small">

            <android.support.v7.widget.AppCompatButton
                android:id = "@+id/entry_note_but_delete"
                style = "@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:contentDescription = "@string/button_delete"
                android:text = "@string/button_delete" />

            <android.support.v7.widget.AppCompatButton
                android:id = "@+id/entry_note_but_share"
                style = "@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:contentDescription = "@string/button_share"
                android:text = "@string/button_share" />
        </android.support.v7.widget.ButtonBarLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
