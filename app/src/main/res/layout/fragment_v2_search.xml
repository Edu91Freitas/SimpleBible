<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andrewchelladurai.simplebible.V2SearchFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_v2_search_textinputlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_10">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_v2_search_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/fragment_v2_search_edit_text_hint"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/fragment_v2_search_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_v2_search_textinputlayout"
        android:layout_centerHorizontal="true"
        android:paddingEnd="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        android:text="@string/fragment_v2_search_button_label_default"/>

    <TextView
        android:id="@+id/fragment_v2_search_results_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_v2_search_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_10"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <ListView
        android:id="@+id/fragment_v2_search_results_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_v2_search_results_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"/>
</RelativeLayout>
