<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/gap"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.andrewchelladurai.simplebible.ActivityChapter"
    tools:showIn="@layout/activity_chapter">

    <android.support.v7.widget.ListViewCompat
        android:id="@+id/activity_chapter_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fastScrollEnabled="true"
        android:paddingBottom="@dimen/gap"
        android:paddingTop="@dimen/gap" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardUseCompatPadding="true">

        <android.support.v7.widget.ButtonBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/activity_chapter_but_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_white_18dp"
                android:tint="@color/primary_dark" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/activity_chapter_but_notes"
                style="?buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_notes" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/activity_chapter_but_chapter"
                style="?buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_chapter" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/activity_chapter_but_search"
                style="?buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_search" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/activity_chapter_but_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_forward_white_18dp"
                android:tint="@color/primary_dark" />
        </android.support.v7.widget.ButtonBarLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>
