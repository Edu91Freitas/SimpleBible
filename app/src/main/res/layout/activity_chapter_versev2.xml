<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".v2.ChapterViewActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeLight.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeLight.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.ListViewCompat
        android:id="@+id/activity_chapter_list_verses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/gap"
        android:paddingTop="@dimen/gap" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:elevation="@dimen/gap"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/activity_chapter_button_search"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_black"
            android:text="@string/search_label" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/activity_chapter_button_bookmarked"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bookmark_black"
            android:text="@string/notes_label" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/activity_chapter_atv_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:completionThreshold="1"
            android:hint="@string/fragment_goto_label_chapter_text"
            android:inputType="number|textAutoComplete"
            android:maxLines="1"
            android:singleLine="true" />

    </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>
