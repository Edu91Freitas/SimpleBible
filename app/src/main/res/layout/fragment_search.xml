<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:name = "com.andrewchelladurai.simplebible.Search"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:paddingLeft = "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    tools:context = "com.andrewchelladurai.simplebible.FragmentSearch">

    <android.support.v7.widget.LinearLayoutCompat
        android:id = "@+id/frag_search_verse_top_panel"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal">

        <android.support.design.widget.TextInputLayout
            android:id = "@+id/frag_search_label"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_alignParentTop = "true"
            android:layout_weight = "1"
            app:counterEnabled = "true">

            <android.support.design.widget.TextInputEditText
                app:errorTextAppearance="@color/accent"
                app:hintTextAppearance="@color/accent"
                android:id = "@+id/frag_search_input"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:hint = "@string/hint_text_to_search"
                android:maxLines = "1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.ButtonBarLayout
            android:id = "@+id/frag_search_verse_actions"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_below = "@+id/frag_search_label"
            android:layout_centerHorizontal = "true"
            android:layout_marginBottom = "@dimen/gap_big"
            android:layout_weight = "1"
            android:animateLayoutChanges = "true">

            <android.support.v7.widget.AppCompatButton
                android:id = "@+id/frag_search_button"
                style = "@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width = "wrap_content"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:text = "@string/button_search_text" />

            <android.support.v7.widget.AppCompatButton
                android:id = "@+id/frag_search_but_save"
                style = "@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width = "wrap_content"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:text = "@string/button_save"
                android:visibility = "gone" />

            <android.support.v7.widget.AppCompatButton
                android:id = "@+id/frag_search_but_share"
                style = "@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width = "wrap_content"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:text = "@string/button_share"
                android:visibility = "gone" />
        </android.support.v7.widget.ButtonBarLayout>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.RecyclerView
        android:id = "@+id/frag_search_results"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_below = "@+id/frag_search_verse_top_panel"
        app:layoutManager = "LinearLayoutManager"
        tools:listitem = "@layout/entry_search" />
</RelativeLayout>
