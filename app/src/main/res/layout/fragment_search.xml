<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardUseCompatPadding="true">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_search_result_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/gapSmall"
                android:paddingEnd="0dp"
                android:paddingLeft="@dimen/gapSmall"
                android:paddingRight="0dp"
                android:paddingStart="@dimen/gapSmall"
                android:paddingTop="@dimen/gapSmall"
                android:textAppearance="?attr/textAppearanceListItem" />

            <android.support.v7.widget.ButtonBarLayout
                android:id="@+id/fragment_search_result_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="vertical"
                android:padding="0dp">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/fragment_search_result_button_save"
                    style="?android:button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/gap"
                    android:src="@drawable/favorite"
                    android:text="@string/button_save"
                    android:tint="@color/colorAccent" />

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/fragment_search_result_button_share"
                    style="?android:buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/gap"
                    android:src="@drawable/share"
                    android:text="@string/button_share"
                    android:tint="@color/colorAccent" />
            </android.support.v7.widget.ButtonBarLayout>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>
