<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:animateLayoutChanges="true"
                                              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardUseCompatPadding="true">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_search_result_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/gapSmall"
                android:textAppearance="?attr/textAppearanceListItem"/>

            <android.support.v7.widget.ButtonBarLayout
                android:id="@+id/fragment_search_result_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/fragment_search_result_button_save"
                    style="?buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/favorite"
                    android:drawablePadding="@dimen/gapSmall"
                    android:drawableStart="@drawable/favorite"
                    android:text="@string/button_save"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/fragment_search_result_button_share"
                    style="?buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/share"
                    android:drawablePadding="@dimen/gapSmall"
                    android:drawableStart="@drawable/share"
                    android:text="@string/button_share"/>
            </android.support.v7.widget.ButtonBarLayout>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>
