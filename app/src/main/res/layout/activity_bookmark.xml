<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".BookmarkActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/SBTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_bookmark_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/SBTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/text_margin">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_bookmark_label_reference"
            style="@style/StyleForTextSubHeader"
            android:layout_marginBottom="@dimen/text_margin"
            android:gravity="center"
            android:text="@string/bookmark_activity_label_verses" />

        <android.support.v7.widget.ListViewCompat
            android:id="@+id/activity_bookmark_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@android:color/transparent"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            tools:listitem="@layout/content_activity_bookmark_reference_entry" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.CardView
        style="@style/StyleForCards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/cardBackground">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/text_margin">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/activity_bookmark_label_note"
                style="@style/StyleForTextSubHeader"
                android:gravity="center"
                android:text="@string/bookmark_activity_label_note" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/activity_bookmark_note"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:hint="@string/bookmark_activity_hint_note"
                android:minLines="3"
                android:padding="@dimen/text_margin" />

            <android.support.v7.widget.ButtonBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/activity_bookmark_button_save"
                    style="@style/StyleForButtons"
                    android:text="@string/activity_bookmark_button_label_save" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/activity_bookmark_button_edit"
                    style="@style/StyleForButtons"
                    android:text="@string/activity_bookmark_button_label_edit" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/activity_bookmark_button_delete"
                    style="@style/StyleForButtons"
                    android:text="@string/activity_bookmark_button_label_delete" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/activity_bookmark_button_share"
                    style="@style/StyleForButtons"
                    android:text="@string/activity_bookmark_button_label_share" />
            </android.support.v7.widget.ButtonBarLayout>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>
