<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/StyleForCards"
    app:cardBackgroundColor="@color/cardBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_margin">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bookmark_item_reference"
            style="@style/StyleForTextHeader"
            android:layout_alignParentTop="true" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bookmark_item_note"
            style="@style/StyleForTextSubHeader"
            android:layout_below="@+id/bookmark_item_reference"
            android:paddingTop="@dimen/text_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookmark_item_note">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bookmark_item_button_edit"
                style="@style/StyleForActionButtons"
                android:layout_weight="1"
                android:text="@string/fragment_bookmark_button_label_edit" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bookmark_item_button_delete"
                style="@style/StyleForActionButtons"
                android:layout_weight="1"
                android:text="@string/fragment_bookmark_button_label_delete" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bookmark_item_button_share"
                style="@style/StyleForActionButtons"
                android:layout_weight="1"
                android:text="@string/fragment_bookmark_button_label_share" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
