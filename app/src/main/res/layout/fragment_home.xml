<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">

    <TextView
        android:id="@+id/fragment_home_daily_verse"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/header_margin"
        android:padding="@dimen/header_margin"
        android:text="@string/fragment_home_daily_verse_blank"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/fragment_home_img_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_home_daily_verse"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/fragment_home_img_books_desc"
        android:src="@drawable/books_of_the_bible"/>

</RelativeLayout>
