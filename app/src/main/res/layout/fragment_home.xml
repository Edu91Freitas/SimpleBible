<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">

    <fragment
        android:id="@+id/home_goto_fragment"
        android:name="com.andrewchelladurai.simplebible.FragmentGotoLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/fragment_home_daily_verse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_goto_fragment"
        android:layout_centerHorizontal="true"
        android:text="@string/fragment_home_daily_verse_blank"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
</RelativeLayout>
