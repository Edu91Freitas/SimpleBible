<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:padding="@dimen/dp_10"
    tools:context="com.andrewchelladurai.simplebible.FragmentGotoLocation">


    <TextView
        android:id="@+id/fragment_goto_label_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_goto_label_book_name_text"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <AutoCompleteTextView
        android:id="@+id/fragment_goto_book_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_goto_label_book_name"
        android:layout_centerHorizontal="true"
        android:text=""/>

    <TextView
        android:id="@+id/fragment_goto_label_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_goto_book_input"
        android:layout_gravity="center_vertical"
        android:text="@string/fragment_goto_label_chapter_text"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_goto_label_chapter">

        <AutoCompleteTextView
            android:id="@+id/fragment_goto_chapter_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""/>

        <Button
            android:id="@+id/fragment_goto_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onGotoFragmentInteraction"
            android:text="@string/fragment_goto_button_text"/>
    </android.support.v7.widget.LinearLayoutCompat>

</RelativeLayout>
