<resources>

    <style name="ThemeLight" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/accent_dark</item>
    </style>

    <style name="ThemeLight.PopupOverlay" parent="ThemeLight"/>

    <style name="ThemeLight.AppBarOverlay" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/accent_dark</item>
    </style>

    <style name="ThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
