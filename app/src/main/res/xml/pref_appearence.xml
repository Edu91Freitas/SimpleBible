<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:enabled="false"
        android:key="pref_ui_dark_theme"
        android:summary="@string/pref_ui_dark_theme_desc"
        android:title="@string/pref_ui_dark_theme_title"/>

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_ui_text_size_texts"
        android:entryValues="@array/pref_ui_text_size_texts"
        android:key="pref_ui_text_size"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_ui_text_size_title"/>

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="Normal"
        android:entries="@array/pref_ui_text_style_texts"
        android:entryValues="@array/pref_ui_text_style_texts"
        android:key="pref_ui_text_style"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_ui_text_style_title"/>

</PreferenceScreen>
